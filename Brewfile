brew 'nvm'
brew 'prettyping'
brew 'terminal-notifier'
brew 'thefuck'
brew 'tldr'
brew 'tmux'
brew 'trash' # move items to the trash
brew 'tree' # tree command from windows
brew 'unrar'
brew 'wget'
